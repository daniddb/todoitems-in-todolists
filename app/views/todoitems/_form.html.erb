<%= form_for([@todolist, @todoitem]) do |f| %>
  <% if todoitem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todoitem.errors.count, "error") %> prohibited this todoitem from being saved:</h2>

      <ul>
      <% todoitem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>

  <div class="field">
    <%= f.label :item_due %>
    <%= f.date_select :item_due %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <% if @todoitem.persisted? %>
    <div class="field">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    </div>
  <% else %>
    <div class="field">
    <%= f.hidden_field :completed, :value => '' %>
    <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
