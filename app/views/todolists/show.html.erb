
<p>
  <strong>List name:</strong>
  <%= @todolist.list_name %>
</p>

<p>
  <strong>List due:</strong>
  <%= @todolist.list_due %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Item due</th>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todolist.todoitems.each do |todoitem| %>
      <tr>
        <td><%= todoitem.title %></td>
        <td><%= todoitem.item_due %></td>
        <td><%= todoitem.description %></td>
        <td><%= todoitem.completed.humanize %></td>
        <td><%= link_to 'Show', [@todolist, todoitem] %></td>
        <td><%= link_to 'Destroy', [@todolist, todoitem], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= "Completed Todos: #{@counted_todos} is the number of completed todos." %>
<br>
<br>
<%= link_to 'New Todo Item', new_todolist_todoitem_path(@todolist)%>
<br>
<br>
<%= link_to 'Edit', edit_todolist_path(@todolist) %> 
<%= link_to 'Back', todolists_path %>
